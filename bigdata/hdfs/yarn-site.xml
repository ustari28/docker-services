<configuration>

<!-- Site specific YARN configuration properties -->
<!-- Configurations for ResourceManager and NodeManager -->
<!-- ResourceManager -->
  <!--property>
    <name>yarn.resourcemanager.address</name>
    <value>host:port If set, overrides the hostname set in yarn.resourcemanager.hostname.for clients to submit jobs.</value>
  </property-->
  <!--property>
    <name>yarn.resourcemanager.scheduler.address</name>
    <value>host:port If set, overrides the hostname set in yarn.resourcemanager.hostname.for ApplicationMasters to talk to Scheduler to obtain resources.</value>
  </property-->
  <!--property>
    <name>yarn.resourcemanager.resource-tracker.address</name>
    <value>host:port If set, overrides the hostname set in yarn.resourcemanager.hostname.for NodeManagers.</value>
  </property-->
  <!--property>
    <name>yarn.resourcemanager.admin.address</name>
    <value>host:port If set, overrides the hostname set in yarn.resourcemanager.hostname. for administrative commands.</value>
  </property-->
  <!--property>
    <name>yarn.resourcemanager.webapp.address</name>
    <value>host:port If set, overrides the hostname set in yarn.resourcemanager.hostname. web-ui host:port.</value>
  </property-->
  <!--property>
    <name>yarn.resourcemanager.hostname</name>
    <value>host Single hostname that can be set in place of setting all yarn.resourcemanager*address resources. Results in default ports for ResourceManager components.</value>
  </property-->
  <!--property>
    <name>yarn.resourcemanager.scheduler.class</name>
    <value>CapacityScheduler (recommended), FairScheduler (also recommended), or FifoScheduler. Use a fully qualified class name, e.g., org.apache.hadoop.yarn.server.resourcemanager.scheduler.fair.FairScheduler.</value>
  </property-->
  <!--property>
    <name>yarn.scheduler.minimum-allocation-mb</name>
    <value>In MBs</value>
  </property-->
  <!--property>
    <name>yarn.scheduler.maximum-allocation-mb</name>
    <value>In MBs</value>
  </property-->
<!-- NODEMANAGER -->
  <!--property>
    <name>yarn.nodemanager.resource.memory-mb</name>
    <value>Defines total available resources on the NodeManager to be made available to running containers in MB</value>
  </property-->
  <!--property>
    <name>yarn.nodemanager.vmem-pmem-ratio</name>
    <value>Maximum ratio by which virtual memory usage of tasks may exceed physical memory</value>
  </property-->
  <!--property>
    <name>yarn.nodemanager.local-dirs</name>
    <value>Multiple paths help spread disk i/o.</value>
  </property-->
  <!--property>
    <name>yarn.nodemanager.log-dirs</name>
    <value>Comma-separated list of paths on the local filesystem where logs are written.</value>
  </property-->
  <!--property>
    <name>yarn.nodemanager.log.retain-seconds</name>
    <value>10800. Default time (in seconds) to retain log files on the NodeManager Only applicable if log-aggregation is disabled.</value>
  </property-->
  <!--property>
    <name>yarn.nodemanager.remote-app-log-dir</name>
    <value>/logs. HDFS directory where the application logs are moved on application completion. Need to set appropriate permissions. Only applicable if log-aggregation is enabled.</value>
  </property-->
  <!--property>
    <name>yarn.nodemanager.remote-app-log-dir-suffix</name>
    <value>logs. Suffix appended to the remote log dir. Logs will be aggregated to ${yarn.nodemanager.remote-app-log-dir}/${user}/${thisParam} Only applicable if log-aggregation is enabled.</value>
  </property-->
  <!--property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle. Shuffle service that needs to be set for Map Reduce applications.</value>
  </property-->
  <!--property>
    <name>yarn.log-aggregation.retain-seconds</name>
    <value>-1. How long to keep aggregation logs before deleting them. -1 disables. Be careful, set this too small and you will spam the name node.</value>
  </property-->
  <!--property>
    <name>yarn.nodemanager.aux-services</name>
    <value>-1. Time between checks for aggregated log retention. If set to 0 or a negative value then the value is computed as one-tenth of the aggregated log retention time. Be careful, set this too small and you will spam the name node.</value>
  </property-->
  <property>
    <name>yarn.nodemanager.env-whitelist</name>
    <value>JAVA_HOME,HADOOP_COMMON_HOME,HADOOP_HDFS_HOME,HADOOP_CONF_DIR,CLASSPATH_PREPEND_DISTCACHE,HADOOP_YARN_HOME,HADOOP_MAPRED_HOME</value>
  </property>

</configuration>
